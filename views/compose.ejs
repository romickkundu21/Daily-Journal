<h2>Compose</h2>

<form action="/compose" method="post">
    <div class="form-group">
        <label>Text</label>
        <input class="form-control" type="text" name="composeText" >
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" name="composeDesc" id="" cols="40" rows="7"></textarea>
    </div>
    
    <button class="btn btn-lg btn-primary" type="submit" name="composeButton">Publish</button>
</form>

